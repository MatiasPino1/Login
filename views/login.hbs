<link rel="stylesheet" href="css/login.css">
    <div class="loginbox">
        <img src="/images/pngaaa.com-2189569.png" alt="icono" class="avatar">
        <h1>Login</h1>
        <form action="login" method="POST">
            <label for="user">Usuario:</label>
            <input type="text" name="user" id="user" placeholder="Ingrese Usuario">
            <label for="pass">Contraseña:</label>
            <input type="password" name="pass" id="pass" placeholder="Ingrese Contraseña">
            <input type="submit" value="Ingresar">
            <a href="">Olvido su contraseña?</a>
            <a href="">No tiene una cuenta?</a>
              {{#if message}}
                   <div class="error-message">

             <p>{{message}} </p>
            </div>
          </div>
           {{/if}}
            
        </form>
        </div>